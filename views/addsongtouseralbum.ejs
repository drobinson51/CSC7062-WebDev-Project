        <li class="pure-menu-item">
            <a href="/home" class="pure-menu-link">Home</a>
        </li>
		</div>
	

	</li>
</ul>


<div class = "freespace">

</div>

<div class = "manageuseralbumbox">
<div class="pure-g centre">
    <div class="manageuseralbum">
    <form action="/addsongtouseralbum" method="POST">
        <header>
            <h1><%= message %></h1>
        </header>
        <p> Select user album: </p> 
       
        <div class = "selectmanageuseralbums">
            <select name = "albumValue" style="font-size: small;">
               
                <% albumandsonginfo['data'].forEach( (info)=>{   %>
                    <% if (info.user_album_id !== null && info.user_album_id !== "") { %>
                    <option value="<%= info.user_album_id%>">"<%= info.custom_album_name%>"</option>
                    <% } %>
                    <% }); %>
                
            </select>
        </div>
           
     

            <p> Select song: </p> 
            <div class = "selectmanageuseralbums">
            <select name = "songValue">
               
                <% albumandsonginfo['data'].forEach( (info)=>{   %>
                <% if (info.song_id !== null && info.song_id !== "") { %>
                <option value="<%= info.song_id%>">"<%= info.title%>"</option>
                <% } %>
                <% }); %>
                
            </select>
        </div>
           
        <input type="submit" value="Add them together">


        <p>
        <a class="button" href="/inspectreviews?userid=<%=userid%>">Have a look at your reviews</a>
        </p>

        </form>
        
        <footer>
        
        </footer>

    </div>
	</div>
</div>



    
       


</body>
</html>