<div class = "searchalbumsbox">
<div class="pure-g centre">
    <form action="/searchalbums" method="POST">
        <header>
            <h1><%= titletext %></h1>
        </header>
        <p>Artist Name:
        </p>
        <input name="artistField">
     
        <p>Year of release:
        </p>
        <input name="albumyear">
        <div class = "selectalbumgenre">

            
        <select name = "genretypes">


           <option value = "0">Any Genre</option>
            <% genreinfo['data'].forEach( (info)=>{   %>
                <% if (info.user_album_id !== null && info.user_album_id !== "") { %>
                <option value="<%= info.genre_id%>">"<%= info.name%>"</option>
                <% } %>
                <% }); %>
            

        </select>
        </div>
        <input type="submit" value="Search Album">

        </form>
        

